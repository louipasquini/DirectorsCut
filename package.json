{
  "name": "directorscut",
  "private": true,
  "version": "1.0.0",
  "description": "DirectorsCut - Organizador de arquivos inteligente",
  "author": "DirectorsCut Team",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-mac": "npm run build && electron-builder --mac",
    "electron-pack-win": "npm run build && electron-builder --win",
    "electron-pack-linux": "npm run build && electron-builder --linux",
    "preelectron-pack": "npm run build",
    "start": "npm run electron-dev"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.directorscut.app",
    "productName": "DirectorsCut",
    "directories": {
      "output": "dist-electron"
    },
    "icon": "public/IconWhite.ico",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "build/app.manifest",
        "to": "app.manifest"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/IconWhite.ico",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "icon": "public/IconWhite.ico",
      "requestedExecutionLevel": "asInvoker",
      "executableName": "DirectorsCut"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/IconWhite.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/IconWhite.ico",
      "uninstallerIcon": "public/IconWhite.ico",
      "installerHeaderIcon": "public/IconWhite.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Productivity",
      "shortcutName": "DirectorsCut",
      "displayLanguageSelector": false,
      "language": "1033",
      "multiLanguageInstaller": false
    }
  }
}